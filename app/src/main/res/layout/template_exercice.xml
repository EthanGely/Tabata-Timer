<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Exo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="50"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_radius"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/modifierExo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/settings"

                />

            <TextView
                android:id="@+id/Exo_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Exo 1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/supprimerExo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/delete"
                android:onClick="onDeleteWorkout"

                />


        </LinearLayout>

        <TextView
            android:id="@+id/Exo_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30s settings"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Exo_repos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15s repos"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Exo_reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10x repétitions"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Exo_repos_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30s repos long"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Exo_seances"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2x séances"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/startExercice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Commencer"
            android:backgroundTint="@color/green"/>

    </LinearLayout>


</LinearLayout>