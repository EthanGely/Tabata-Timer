<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Exo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="50"
    android:background="@drawable/border_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Exo_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Exo 1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/Exo_sport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30s exercice"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/Exo_repos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15s repos"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/Exo_reps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10x repétitions"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/Exo_repos_long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30s repos long"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/Exo_seances"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2x séances"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible" />


</LinearLayout>